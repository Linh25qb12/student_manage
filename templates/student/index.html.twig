{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="margin: 30px">Student List</h1>
    <div style="margin: 2.5% 5% ">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th style="text-align: center" scope="col">ID</th>
                <th style="text-align: center" scope="col">Full Name</th>
                <th style="text-align: center" scope="col">Major</th>
            </tr>
            </thead>
            <tbody>
            {% for student in students %}
                <tr>
                    <th style="text-align: center" scope="row" >{{ student.id }}</th>
                    <td><a class="link-dark" style="text-decoration: none" href="{{ path('student_show', {'id': student.id}) }}">{{ student.fullname }}</a></td>
                    <td>{{ student.major }}</td>
                    <td><a class="link-info" style="text-decoration: none" href="{{ path('student_delete', {'id': student.id}) }}">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a style="margin-left: 46%" class="btn btn-outline-info" href="{{path('student_create')}}" role="button">Create</a>

{% endblock %}