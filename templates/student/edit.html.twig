{% extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div style="margin: 5% 30%">
    <div style="width: 100%; text-align: center; margin-bottom: 25px;background-color: #5eb5e0; padding: 25px 0">
        <h1>
            Student
        </h1>
    </div>
    <div class="form-group">
        <label style="margin: 0 0 10px 10px" for="FullName">Full name:</label>
        {{ form_widget(form.fullname,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Full name',
                'style':'margin-bottom: 20px'

            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.fullname) }}
        </div>
    </div>
    <div class="form-group">
        <label style="margin: 0 0 10px 10px" for="date_of_birth">Date of Birth: </label>
        {{ form_widget(form.dob,{
            'attr':{
                'class':'form-control',
                'style':'margin-bottom: 20px'
            }
        }) }}
    </div>
    <div class="form-group">
        <label style="margin: 0 0 10px 10px" for="major">Major:</label>
        {{ form_widget(form.major,{
            'attr':{
                'class':'form-control',
                'style':'margin-bottom: 20px'
            }
        }) }}
    </div>
    <div style="margin-left: 15%; width: 70%" class="d-grid gap-2">
    <input type="submit" name="create_student" value="Edit" class="btn btn-outline-dark"/>
    <div>
    </div>
    {{ form_end(form) }}
{% endblock %}