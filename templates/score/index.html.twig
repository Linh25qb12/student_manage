{% extends 'base.html.twig' %}

{% block body %}
    <h1>Score list</h1>
    <table>
        <thead>
        <tr>
            <th>Student ID</th>
            <th>Subject ID</th>
            <th>Score</th>
            <th>Action</th>
{#             #}
        </tr>
        </thead>
        <tbody>
        {% for score in scores %}
            <tr>
                <td>{{ score.student}}</td>
                <td>{{ score.subject }}</td>
                <td>{{ score.score }}</td>
                <td><a href="{{ path('score_edit', {'student': score.student}) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
