{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: wheat!important;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" style="border-left: 20px!important;" aria-current="page"  href="{{ path('student_list') }}">Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"  href="">Major</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"  href="">Subject</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"  href="">Score</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <h1 id="abc">Score list</h1>
    <table>
        <thead>
        <tr>
            <th>Student ID</th>
            <th>Subject ID</th>
            <th>Score</th>
            <th>Action</th>
{#             #}
        </tr>
        </thead>
        <tbody>
        {% for score in scores %}
            <tr>
                <td>{{ score.student}}</td>
                <td>{{ score.subject }}</td>
                <td>{{ score.score }}</td>
                <td><a href="{{ path('score_edit', {'student': score.student}) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
